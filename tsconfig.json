{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ],
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@recoil/*": [
        "recoil/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@gpu/*": [
        "gpu/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@theme/*": [
        "theme/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/utils/scrollHook.js",
    "src/components/create/editor"
  ],
  "exclude": [
    "node_modules"
  ],
}